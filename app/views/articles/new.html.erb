<h1>New Article</h1><br/>

<%= form_for @article do |form| %>

<p>
    <%= form.label :title %>
    <%= form.text_field :title %>
</p>

<p>
    <%= form.label :description %>
    <%= form.text_field :description %>
</p>

<p>
    <%= form.label :price %>
    <%= form.text_field :price %>
</p>

<p>
    <%= form.submit%>
</p>

<% end %>